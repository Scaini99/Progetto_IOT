import RPi.GPIO as GPIO
import time

RELAY_PIN = 21  # GPIO 21 (pin fisico 40)
RELAY_ON = GPIO.HIGH   # Cambia a GPIO.LOW se il tuo modulo Ã¨ attivo LOW
RELAY_OFF = GPIO.LOW   # Inverti se necessario

GPIO.setmode(GPIO.BCM)
GPIO.setup(RELAY_PIN, GPIO.OUT)

GPIO.output(RELAY_PIN, RELAY_ON)
time.sleep(5)

GPIO.output(RELAY_PIN, RELAY_OFF)
time.sleep(2)

GPIO.cleanup()
========
import time
import RPi.GPIO as GPIO

PIN_CONVEYOR = 21  # sostituisci con il tuo pin BCM

def main():
    GPIO.setmode(GPIO.BCM)     
    GPIO.setup(PIN_CONVEYOR, GPIO.OUT)

    print("Conveyor START111")
    GPIO.output(PIN_CONVEYOR, GPIO.HIGH)

    time.sleep(5)
    print("Conveyor STOP")
    GPIO.output(PIN_CONVEYOR, GPIO.LOW)


if __name__ == "__main__":
    main()
